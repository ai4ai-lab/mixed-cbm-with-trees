{
    "name": "temperature_scaling_mnist",
    "n_gpu": 1,

    "arch": {
        "type": "MNISTCBMwithDTaslabelPredictorArchitecture",
        "args": {}
    },
    "model": {
        "xc_lr": 0.001,
        "xc_weight_decay": 0,
        "cy_lr": 0.001,
        "cy_weight_decay": 0,
        "pretrained_concept_predictor": "./trained_models/pretrained_xtoc_encoders/mnist_reduced3/model_best.pth"
    },
    "dataset": {
        "num_classes": 3,
        "num_concepts": 9,
        "concept_names": {
            "thickness": ["small", "medium", "large"],
            "width": ["small", "medium", "large"],
            "length": ["small", "medium", "large"]
        },
        "class_names": ["6", "8", "9"],
        "use_attribute_imbalance": false
    },
    "data_loader": {
        "type": "get_mnist_dataLoader_original",
        "args":{
            "data_dir": "./datasets/MNIST",
            "type": "SGD",
            "batch_size": 206
        }
    },
    "trainer": {
        "type": "IndependentCBMTrainer",
        "hard_cbm": true,
        "args": {},
        "xc_epochs": 100,
        "cy_epochs": 15,
        "save_dir": "saved/",
        "save_period": 1000,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": 0,
        "tensorboard": true,
        "save_test_tensors": false
    },
    "regularisation": {
        "type": "None",
        "min_samples_leaf": 150,
        "snapshot_epochs": 50
    }
}
