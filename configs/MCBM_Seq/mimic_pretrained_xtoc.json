{
    "name": "mcbm_seq_mimic",
    "n_gpu": 1,

    "arch": {
        "type": "MIMICBMwithDTaslabelPredictorArchitecture",
        "args": {}
    },
    "model": {
        "xc_lr": 0.001,
        "xc_weight_decay": 0,
        "cy_lr": 0.01,
        "cy_weight_decay": 0,
        "pretrained_concept_predictor": "./trained_models/temperature_scaled_xtoc_encoders/mimic/0928_235949/model_with_temperature.pth",
        "temperature_scaling": true
    },
    "dataset": {
        "num_classes": 2,
        "num_concepts": 18,
        "concept_names": {
            "respiration system": ["normal", "moderate", "severe"],
            "renal system": ["normal", "moderate", "severe"],
            "coagulation system": ["normal", "moderate", "severe"],
            "liver": ["normal", "moderate", "severe"],
            "cardiovascular system": ["normal", "moderate", "severe"],
            "central nervous system": ["normal", "moderate", "severe"]
        },
        "class_names": ["recovered", "passed away"],
        "use_attribute_imbalance": false
    },
    "data_loader": {
        "type": "get_mimic_dataLoader",
        "args":{
            "data_dir": "",
            "type": "SGD",
            "batch_size": 206
        }
    },
    "trainer": {
        "type": "McbmSeqTrainer",
        "hard_cbm": true,
        "args": {},
        "xc_epochs": 100,
        "cy_epochs": 200,
        "save_dir": "saved/",
        "save_period": 1000,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 0,
        "tensorboard": true,
        "save_test_tensors": false,
        "save_train_tensors": false
    },
    "regularisation": {
        "type": "None",
        "min_samples_leaf": 150,
        "snapshot_epochs": 50
    }
}
